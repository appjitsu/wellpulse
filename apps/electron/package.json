{
  "name": "electron",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.js",
  "description": "WellPulse Electron - Offline-first desktop app for field data entry",
  "author": "WellPulse",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "better-sqlite3": "^9.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^9",
    "eslint-plugin-react": "^7.37.3",
    "globals": "^15",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.wellpulse.electron",
    "productName": "WellPulse Field",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron",
      "dist"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
